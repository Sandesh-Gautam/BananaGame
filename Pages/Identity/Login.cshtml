@page
@model BananaGame.Pages.Identity.LoginModel

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        /* General body and background styles */
        body {
            background-color: #222222;
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* General content styling */
        .content {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Card container for login form */
        .card {
            background-color: #333333;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.2);
            width: 100%;
        }

            /* Title inside the card */
            .card h2 {
                color: #FFC400;
                font-size: 2rem;
                margin-bottom: 20px;
                text-align: center;
            }

        /* Form group styling */
        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-size: 1rem;
                color: #FFC400;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                background-color: #444444;
                color: #fff;
                border: 1px solid #FFC400;
                border-radius: 5px;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: #FFC400;
                }

        /* Eye icon inside the input */
        .password-container {
            position: relative;
            width: 100%;
        }

            .password-container input {
                width: 100%;
            }


        .password-icon {
            position: absolute;
            right: 2px;
            top: 65%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #FFC400;
            font-size: 18px;
        }

        /* Submit button styling */
        .submit-button {
            background-color: #FFC400;
            color: #222222;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-size: 1rem;
        }

            .submit-button:hover {
                background-color: #e6a800;
            }

        /* Info text at the bottom */
        .info-text {
            text-align: center;
            color: #fff;
            margin-top: 15px;
        }

        .link {
            color: #FFC400;
            text-decoration: none;
        }

            .link:hover {
                text-decoration: underline;
            }

        /* Error message styling */
        .error-message {
            color: #FF6347;
            font-size: 1rem;
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>

<div class="content">
    <div class="card">
        <h2>Login to Your Account</h2>

        <form method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>

            <div class="form-group password-container">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
                <i id="togglePassword" class="fas fa-eye password-icon"></i>
                <p class="error-message" id="passwordError"></p>
            </div>

            <button type="submit" class="submit-button">Login</button>
        </form>

        <!-- Conditionally render error message if there is a message -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="error-message">@Model.Message</p>
        }

        <p class="info-text">Don't have an account? <a href="../Identity/Register" class="link">Register here</a></p>
    </div>
</div>

<script>
    // Function to toggle the password visibility
    document.getElementById('togglePassword').addEventListener('click', function () {
        const passwordField = document.getElementById('password');
        const toggleButton = document.getElementById('togglePassword');

        // Toggle password visibility
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleButton.classList.remove('fa-eye');
            toggleButton.classList.add('fa-eye-slash'); // Change to eye-slash icon when password is visible
        } else {
            passwordField.type = 'password';
            toggleButton.classList.remove('fa-eye-slash');
            toggleButton.classList.add('fa-eye'); // Change to eye icon when password is hidden
        }
    });
</script>
