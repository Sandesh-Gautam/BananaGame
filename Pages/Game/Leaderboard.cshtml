@page
@model BananaGame.Pages.Game.LeaderboardModel
@using BananaGame.Models
@{
    ViewData["Title"] = "Leaderboard";
}

<div class="leaderboard-container">
    <h1>Leaderboard</h1>

    <!-- Leaderboard Table -->
    <table class="leaderboard-table">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.HighScores != null && Model.HighScores.Any())
            {
                int rank = 1;
                foreach (var highScore in Model.HighScores)
                {
                    <tr>
                        <td>@rank</td>
                        <td>@highScore.User.Username</td>
                        <td>@highScore.Score</td>
                    </tr>
                    rank++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No scores available for this difficulty level.</td>
                </tr>
            }
        </tbody>
    </table>


    <!-- Back to Dashboard Button -->
    <a href="/Game/Dashboard" class="back-button">Back to Dashboard</a>
</div>

<style>
    .leaderboard-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
        color: #ffffff;
        background-color: #222222;
        font-family: Arial, sans-serif;
    }

    h1 {
        margin-bottom: 20px;
    }

    .back-button {
        margin-top: 40px;
        padding: 8px 16px;
        background-color: #666666;
        color: #ffffff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        transition: background-color 0.3s;
    }

        .back-button:hover {
            background-color: #888888;
        }

    .leaderboard-table {
        width: 1200px;
        height: 500px;
        max-width: 800px;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .leaderboard-table th, .leaderboard-table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #FFC400;
        }

        .leaderboard-table th {
            background-color: #333333;
            color: #FFC400;
        }

        .leaderboard-table td {
            background-color: #444444;
        }

 

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        color: #222222;
        background-color: #FFC400;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #ffb300;
        }

</style>
